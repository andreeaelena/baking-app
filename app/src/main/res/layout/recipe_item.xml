<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recipe_card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_image_height">

            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/recipe_image_height"
                android:layout_centerHorizontal="true"
                android:background="@color/grey_400"
                android:scaleType="center"
                android:src="@drawable/restaurant_icon"/>

            <TextView
                android:id="@+id/servings_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recipe_servings_text_size"
                android:padding="@dimen/recipe_servings_padding"
                android:text="@string/servings_text"
                android:textColor="@color/servings_text"
                android:textStyle="bold"
                android:background ="@color/servings_background"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/recipe_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/recipe_name_text_size"
            android:padding="@dimen/recipe_name_padding"/>

    </LinearLayout>
    
</android.support.v7.widget.CardView>
